- load menu_tags

for child in children
    li(class="{% if child.selected %}active{% endif %} {% if child.ancestor %}active{% endif %} {% if child.children %}dropdown{% endif %}")
        if child.children
            a.dropdown-toggle(href="{{ child.attr.redirect_url|default:child.get_absolute_url }}", title="{{ child.get_menu_title }}", data-toggle="dropdown")
                {{ child.get_menu_title }}
                span.caret

            ul.dropdown-menu
                - show_menu from_level to_level extra_inactive extra_active template "" "" child

        else
            a(href="{{ child.attr.redirect_url|default:child.get_absolute_url }}", title="{{ child.get_menu_title }}") {{ child.get_menu_title }}
